{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Points by Country â€” Athlete Contributions (WSL 2025)",
    "anchor": "middle",
    "fontSize": 18
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Lachlan-Casey/Assignment2/refs/heads/main/wsl_mct_2025.csv"
  },
  "transform": [
    {"filter": "datum.Name != null && datum.Name != ''"},
    {"calculate": "toNumber(datum.Rank)", "as": "RankNum"},

  ],
  "mark": {"type": "bar"},
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "sort": "-y"  
    },
    "y": {
      "aggregate": "sum",
      "field": "Total Points",
      "type": "quantitative",
      "title": "Total Points (Sum of Athletes)"
    },
    "color": {
      "field": "Name",
      "type": "nominal",
      "title": "Athlete",
      "scale": {"scheme": "tealblues"}
    },
    "tooltip": [
      {"field": "Country", "title": "Country"},
      {"field": "Name", "title": "Athlete"},
      {"aggregate": "sum", "field": "Total Points", "title": "Athlete Total Points"}
    ]
  },
  "width": "container",
  "height": 400,
  "autosize": {"type": "fit", "contains": "padding"},
  "config": {
    "bar": {"cornerRadiusEnd": 2},
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 14},
    "legend": {"orient": "right"}
  }
}


